<div class="container">
	<!-- Section: Blog v.3 -->
	<section class="my-5">
    		  <div class="row">

			    <!-- Grid column -->
			    <div class="col-lg-6 col-xl-4">

			      <!-- Featured image -->
			      <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-4">
			        <%= image_tag @blog.image_url, class: 'img img-thumbnail', style: 'width:100%;height:350px' %>
			          <div class="mask rgba-white-slight"></div>
			      </div>

			    </div>
			    <div class="col-lg-7 col-xl-8">
			     <br>	
			      <h3 class="font-weight-bold mb-3"><strong><%= "#{@blog.name} - #{@blog.title}" %></strong></h3>
			      <p><%= @blog.created_at.strftime("%m/%d/%Y") %></p>
			    </div>
			  </div>
		  <!-- Grid row -->

		  <hr class="my-5">

		  <div class="col-lg-6 col-xl-4">
		  	<div class="row">
		  		<div class="col-lg-12">
		  	      <h3>Leave a Reply</h3>	
			  	</div>
			  	<div class="col-lg-12">
			  	  <p>Your email address will not be published. Required fields are marked *</p>	
			  	</div>
			  	<form id="leave_a_reply">
				  	<div class="col-lg-12">
				  	  <label><b>Comment</b></label>
				  	  <textarea class="form-control" rows="6" name="comment"></textarea>	
				  	</div>
				  	<div class="col-lg-12">
				  	  <br>	
				  	  <label><b>Name *</b></label>
				  	  <input type="text" class="form-control" name="name">	
				  	</div>
				  	<div class="col-lg-12">
				  	  <br>	
				  	  <label><b>Email *</b></label>
				  	  <input type="text" class="form-control" name="email">	
				  	</div>
				  	<div class="col-lg-12">
				  	  <br>	
				  	  <label><b>Website</b></label>
				  	  <input type="text" class="form-control" name="website">	
				  	</div>
				  	<div class="col-lg-12">
				  	  <br>	
				  	  <button class="btn btn-primary post-comment">Post Comment</button>	
				  	</div>
                </form>
		  	</div>
		  </div>

	  </div>

	</section>
</div>
<%= javascript_include_tag 'store-front/blog.js' %>