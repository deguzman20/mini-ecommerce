<div class="container">
   <br>
   <div class="jumbotron">
     <div class="row">
     	 <div class="col-lg-4 col-md-4 mb-lg-0 mb-4">
          	<%= image_tag @product.image_url, class: 'img-fluid img-responsive hoverable'%>       
         </div>	
         <div class="col-lg-8 col-md-8 mb-lg-0 mb-4"> 
		      <h2 class="h1-responsive"><%= @product.name %></h2>
		      <p class="lead">
		      	<%= @product.product_description %>
		      </p>
		       <hr class="my-2">
		       
			   <div class="box-qty btn-group">
					<a href="javascript:void(0);" class="quantity-minus btn btn-dark">-</a>
					<input type="text" name="p_quantity" id="qnt" class="quantity form-control" value="1" disabled="disabled" style="height:50px;text-align: center;">
					<a href="javascript:void(0);" class="quantity-plus btn btn-dark">+</a>
			   </div>
					<button id="add-to-cart" class="btn btn-dark">Add To Cart</button>
         </div>
     </div> 
	   <!--  <a class="btn btn-primary btn-lg" role="button">Learn more</a> -->
   </div>
   <!-- Classic tabs -->
<div class="classic-tabs">

  <ul class="nav tabs-orange" id="myClassicTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link  waves-light active show" id="profile-tab-classic" data-toggle="tab" href="#features"
        role="tab" aria-controls="features" aria-selected="true">FEATURES</a>
    </li>
    <li class="nav-item">
      <a class="nav-link waves-light" id="technical-tab-classic" data-toggle="tab" href="#spec" role="tab"
        aria-controls="spec" aria-selected="false">TECHNICAL SPECIFICATIONS</a>
    </li>
    <li class="nav-item">
      <a class="nav-link waves-light" id="charging-capacity-tab-classic" data-toggle="tab" href="#charging" role="tab"
        aria-controls="charging-classic" aria-selected="false">CHARGING CAPACITY</a>
    </li>
    <li class="nav-item">
      <a class="nav-link waves-light" id="faq-tab-classic" data-toggle="tab" href="#faq" role="tab"
        aria-controls="faq" aria-selected="false">FAQ's</a>
    </li>
  </ul>
  <div class="tab-content border-right border-bottom border-left rounded-bottom" id="myClassicTabContent">
    <div class="tab-pane fade active show" id="features" role="tabpanel" aria-labelledby="features-tab">
     <div class="container">  
       <div class="row">
         <!-- Card Light -->
         <% @features.each do |feature| %>
           <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">    
              <div class="card">

                <!-- Card image -->
                <div class="view overlay">
                  <a>
                    <div class="mask rgba-white-slight"></div>
                  </a>
                </div>

                <!-- Card content -->
                <div class="card-body" style="height:200px">
                  <!-- Title -->
                  <h4 class="card-title"><%= feature.first_text %></h4>
                  <hr>
                  <!-- Text -->
                  <p class="card-text"><%= feature.second_text %></p>
                </div>
              </div>
              <br>
           </div>
         <% end %>
        <!-- Card Light -->
       </div>
     </div>
    </div>
    <div class="tab-pane fade" id="spec" role="tabpanel" aria-labelledby="spec-tab">
      <div class="row"> 
       <div class="col-lg-4 col-md-4 mb-lg-0 mb-4">
         <%= image_tag @tect_spec_img.image_url, class: 'img-fluid' %>  
       </div>  
       <div class="col-lg-8 col-md-8 mb-lg-0 mb-4">  
         <table class="table table-striped">
              <thead>
                <tr style="background-color:#31383d;color:white">
                  <th scope="col" colspan="2"></th>
                  <th scope="col" colspan="2"></th>
                </tr>
              </thead>
              <tbody>
               <% @tech_specs.each do |tech_spec| %> 
                   <tr>
                     <td colspan="2"><%= tech_spec.type_name %></td>
                     <td colspan="2"><%= tech_spec.value %></td>
                   </tr>
               <% end %> 
              </tbody>
         </table>
       </div> 
      </div>
    </div>
    <div class="tab-pane fade" id="charging" role="tabpanel" aria-labelledby="charging-tab-classic">
     <div class="row"> 
      <% @charging_capacities.each do |charging_capacity| %> 
        <div class="col-lg-4 col-md-4  col-sm-6 mb-lg-0 mb-4">
          <div class="card card-cascade wider">
                    <!-- Card image -->
                    <div class="view view-cascade overlay">
                      <br>
                      <center>
                        <%= image_tag charging_capacity.image_url, class: 'card-img-top', style: 'width:25%;'%>
                      </center> 
                      <br> 
                      <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                      </a>
                    </div>

                    <!-- Card content -->
                    <div class="card-body card-body-cascade text-center">

                      <!-- Title -->
                      <h4 class="card-title"><strong><%= charging_capacity.first_text %></strong></h4>
                      <!-- Subtitle -->
                      <h5 class="blue-text pb-2"><strong><%= charging_capacity.second_text %></strong></h5>
                    </div>
          </div>
          <br>
        </div>
      <% end %>
      <br>
     </div>  
    </div>
    <div class="tab-pane fade" id="faq" role="tabpanel" aria-labelledby="faq">
      <% i = 0 %>  
      <% @faqs.each do |faq| %> 
        <% i+=1 %> 
        <div class="accordion md-accordion accordion-<%= i %>" id="accordionEx-<%= i %>" role="tablist">
              <div class="card">
                <div class="card-header lighten-3 z-depth-1" role="tab" id="heading96" style="background-color:#31383d">
                  <h6 class="text-uppercase mb-0 py-1">
                    <a class="white-text font-weight-bold" data-toggle="collapse" href="#collapse-<%= i %>" aria-expanded="true"
                      aria-controls="collapse96">
                       <%= faq.question %>
                    </a>
                  </h6>
                </div>
                <div id="collapse-<%= i %>" class="collapse hide" role="tabpanel" aria-labelledby="heading96"
                  data-parent="#accordionEx-<%= i %>">
                  <div class="card-body">
                    <div class="row my-4">
                      <div class="col-md-8">
                        <p class=""><%= faq.answer %></p>
                      </div>
                     
                    </div>
                  </div>
                </div>
              </div>
         </div>
      <% end %>

    </div>
  </div>
  <br>
</div>
<!-- Classic tabs -->
</div>

<%= javascript_include_tag 'store-front/cart.js' %>