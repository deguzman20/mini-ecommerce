<br><br>
<div class="container">
  <div class="row">
  	<div class="col-lg-5 col-md-5"> 
  	  <table class="table table-responsive table-hover">
		  <thead>
		    <tr class="tr-color">
		      <th scope="col">Transaction #</th>
		      <th scope="col">Date</th>
		      <th scope="col">Action</th>
		    </tr>
		  </thead>
		  <tbody>
		   <% @customer_orders.each do |co| %> 
		    <tr>
		      <td><br><%= co.paypal_transaction %></td>
		      <td><br><%= co.created_at.strftime("%m/%d/%Y")%></td>
		      <td><button class="btn btn-view" id="view-<%= co.id %>">View</button></td>
		    </tr>
		   <% end %> 
		  </tbody>
	  </table>
    </div>
    <div class="col-lg-7 col-md-7"> 
     <table class='table table-responsive table-condensed'>
         <thead>
          <tr class="tr-single-order-history">  
           <th>Image</th>
           <th>Product name</th>
           <th>Price</th>
           <th>Quantity</th>
           <th>Subtotal</th>
          </tr>
         </thead>
         <tbody id="product-tbody">
         </tbody>
     </table>
    </div>
  </div>	
</div>
<%= stylesheet_link_tag 'store-front/style.css' %>
<%= javascript_include_tag 'store-front/order-history.js' %>