<div class="col-md-10 order-md-10 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-orange badge-pill"><%= cart_quantity %></span>
          </h4>
          <ul class="list-group mb-3">
            <% cart_product.each do |cp| %> 
	            <li class="list-group-item d-flex justify-content-between lh-condensed">
	              <div>
	                <h6 class="my-0"><%= image_tag cp.product.image_url, width: '40',style:'position:relative;top:-2px;left:-5%' %><%= cp.product.name %></h6>
	              </div>
	              <span class="text-muted">₱ <%= number_with_precision((cp.product.price * cp.quantity), :precision => 0, :delimiter => ',')%></span>
	            </li>
	        <% end %>
            <% unless additional.nil? %>
                  <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                      <h6 class="my-0">Shipping fee</h6>
                    </div>
                    <span class="text-muted">₱ <%= number_with_precision((additional), :precision => 0, :delimiter => ',')%></span>
                  </li>
            <% end %>    
            <li class="list-group-item d-flex justify-content-between">
              <span>Total (PHP)</span>
              <strong>₱ 
               <% if additional.nil? %> 
                 <%= number_with_precision((sub_total), :precision => 0, :delimiter => ',')%>    
               <% else %>
                 <%= number_with_precision((sub_total + additional), :precision => 0, :delimiter => ',')%> 
               <% end %>
              </strong>
            </li>
          </ul>

