<!--Carousel Wrapper-->
<div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel" data-interval="3000">
  <!--Indicators-->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-2" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-2" data-slide-to="1"></li>
    <li data-target="#carousel-example-2" data-slide-to="2"></li>
  </ol>
  <!--/.Indicators-->
  <!--Slides-->
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <div class="view">
        <%= image_tag 'carousels/Slide1.jpg', class: 'd-block w-100'%>  
        <div class="mask rgba-black-light"></div>
      </div>
      <div class="carousel-caption">
        <h1 class="h1-responsive" style="font-size:350%">Power Your Life. Take Charge</h1>
        <p style="font-size:125%">Ultra portable power banks and high capacity battery generators to power the everyday lives of Filipinos</p>
      </div>
    </div>
    <div class="carousel-item">
      <!--Mask color-->
      <div class="view">
        <%= image_tag 'carousels/Slide2.jpg', class: 'd-block w-100'%> 
        <div class="mask rgba-black-strong"></div>
      </div>
      <div class="carousel-caption">
        <h1 class="h1-responsive" style="font-size:350%">Power Your Life. Take Charge</h1>
        <p style="font-size:125%">Ultra portable power banks and high capacity battery generators to power the everyday lives of Filipinos</p>
      </div>
    </div>
    <div class="carousel-item">
      <!--Mask color-->
      <div class="view">
        <%= image_tag 'carousels/Slide3.jpg', class: 'd-block w-100'%> 
        <div class="mask rgba-black-slight"></div>
      </div>
      <div class="carousel-caption">
        <h1 class="h1-responsive" style="font-size:350%">Power Your Life. Take Charge</h1>
        <p style="font-size:125%">Ultra portable power banks and high capacity battery generators to power the everyday lives of Filipinos</p>
      </div>
    </div>
  </div>
  <!--/.Slides-->
  <!--Controls-->
  <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <!--/.Controls-->
</div>
<!--/.Carousel Wrapper-->