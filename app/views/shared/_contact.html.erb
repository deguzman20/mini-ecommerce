
<div class="container" id="contact_us" data-aos="zoom-in">
<!-- Section: Contact v.1 -->
  <section class="my-5">

    <!-- Section heading -->
    <h2 class="h1-responsive font-weight-bold text-center my-5">Contact us</h2>
    <!-- Grid row -->
    <div class="row">

      <!-- Grid column -->
      <div class="col-lg-5 mb-lg-0 mb-4">

        <!-- Form with header -->
        <div class="card">
          <div class="card-body">
            <!-- Header -->
            <div class="form-header ccent-1" style="background-color: #31383d;">
              <h3 class="mt-2"><i class="fas fa-envelope"></i> Write to us:</h3>
            </div>
            <!-- Body -->
            <div class="md-form">
              <i class="fas fa-user prefix grey-text"></i>
              <input type="text" id="form-name" class="form-control">
              <label for="form-name">Your name</label>
            </div>
            <div class="md-form">
              <i class="fas fa-envelope prefix grey-text"></i>
              <input type="text" id="form-email" class="form-control">
              <label for="form-email">Your email</label>
            </div>
            <div class="md-form">
              <i class="fas fa-pencil-alt prefix grey-text"></i>
              <textarea id="form-text" class="form-control md-textarea" rows="3"></textarea>
              <label for="form-text">Send message</label>
            </div>
            <div class="text-right">
              <button class="btn text-white" style="background-color:rgb(227, 97, 46);" id="send">Submit</button>
            </div>
          </div>
        </div>
       
      </div>
      <div class="col-lg-7">

        <!--Google map-->
        <div id="map-container-section" class="z-depth-1-half map-container-section mb-4" style="height: 400px"> 
            <iframe src="http://maps.google.com/maps?q=Makati City., 122 Valero, Makati, 1227, Philippines5&output=embed" width="360" height="270" frameborder="0" style="border:0" allowfullscreen></iframe>  
        </div>
        <!-- Buttons-->
        <div class="row text-center">
          <div class="col-md-4">
            <a class="btn-floating accent-1" style="background-color: #31383d">
              <i class="fas fa-map-marker-alt"></i>
            </a>
            <p> 5th Floor, Ricogen Buildling, 112 Aguirre St., Legaspi Village</p>
          </div>
          <div class="col-md-4">
            <a class="btn-floating accent-1" style="background-color: #31383d">
              <i class="fas fa-phone"></i>
            </a>
            <p> + 63 966 815 5300 (Globe)</p>
            <p> + 63 919 433 2434 (Smart)</p>
          </div>
          <div class="col-md-4">
            <a class="btn-floating accent-1" style="background-color: #31383d">
              <i class="fas fa-envelope"></i>
            </a>
            <p>info@powerlife.ph</p>
          </div>
        </div>

      </div>
      <!-- Grid column -->

    </div>
    <!-- Grid row -->
  </section>
<!-- Section: Contact v.1 -->
</div>
<%= javascript_include_tag 'store-front/contact-us.js' %>